#!/bin/bash

source "$(dirname "$0")"/scripts/include.sh

f="$(portable_readlink "$0")"
docker run -it --rm \
    --volume="$f":/assignment:rw \
    --network=host \
    --hostname=127.0.0.1 \
    -u student \
    -a stdin -a stdout -w /assignment corank/cs3235-seclab:assignment /bin/bash \
    -c 'make -C /assignment/student clean'

